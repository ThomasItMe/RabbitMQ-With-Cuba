<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://companyEdit.caption"
        focusComponent="form"
        messagesPack="com.company.rabbitmqsendconsume.web.screens.company">
    <data>
        <instance id="companyDc"
                  class="com.company.rabbitmqsendconsume.entity.Company">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="companyDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <textField id="ageField" property="age"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
